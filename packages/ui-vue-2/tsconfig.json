{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    "skipLibCheck": true,
    "paths": {
      "@cohensive/select-core": ["../core"],
      "@cohensive/select-core/types": ["../core/types"]
    }
  },
  "references": [
    {
      "path": "../core"
    }
  ],
}
